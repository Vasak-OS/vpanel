{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vpanel",
  "mainBinaryName": "vpanel",
  "version": "0.1.0",
  "identifier": "ar.net.vasak.panel",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vpanel",
        "decorations": false,
        "width": 800,
        "height": 32,
        "maxHeight": 32,
        "minHeight": 32,
        "minWidth": 720,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "closable": false,
        "minimizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {}
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}